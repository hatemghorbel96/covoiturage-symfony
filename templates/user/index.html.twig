{% extends 'base.html.twig' %}

{% block title %}Profile de {{user.nom}} {{user.prenom}}{% endblock %}

{% block body %}
<br>
  <div class="ui layout">
       
        <!-- grid -->
        <div class="ui grid container">
           
            <div class="row">
               
               <div class="ui twelve wide tablet three wide computer three wide widescreen three wide large screen column">
                    <br>
                    <div class="sticky-element sticky-desktop sticky-large-desktop under-ths after-element">
                        <div class="dashboard-sticky with-avatar">
                            <div class="dashboard-sticky-inner">
                                <div class="dashboard-details">
                                    <span class="dashboard-avatar avatar-sq large-avatar-sq verified-sq">
                                        <img src="{{asset('assets/hatem.jpg')}}" alt="">
                                    </span>

                                    <div class="dashboard-texts">
                                        <h2 class="dashboard-name">{{user.nom}} {{user.prenom}}</h2>
                                        <div class="dashboard-subtitle">{{user.email}}</div>
                                    </div>
                                </div>

                                <div class="dashboard-menu has-submenu">
                                    <a href="#" class="item">
                                        <i class="icon icon-side-sticky-menu"></i>
                                    </a>
                                    <ul class="submenu">
                                        <li class="active"><a class="item anchor-sq"  href="#about-me">A propos de moi</a></li>
                                       {% if app.user.id == user.id %}
                                        <li><a class="item anchor-sq" href="#products">Mes ads</a></li>
                                         <li><a  href="{{path('myres')}}">Mes Reservations</a></li>
                                         {% endif %}
                                    </ul>
                                </div>
                                
                           
                            </div>
                            
                        </div>
                    </div>
                    
               </div>
               
               
               <div class="ui twelve wide tablet nine wide computer nine wide widescreen nine wide large screen column" id="about-me">
                   <div class="ui grid">
                       <div class="row">
                         
                           <div class="ui twelve wide tablet twelve wide computer twelve wide widescreen twelve wide large screen column">
                              
                               <div class="white-section dashboard-description typo-section-sq">
                                  
                                  <div class="ui grid">
                                  	<div class="row">
                                  	
                                  		<div class="ui twelve wide tablet eight wide computer eight wide widescreen eight wide large screen column">
                                  			<h3>A propos de moi</h3>
										</div>
                                 		
                                  		<div class="ui twelve wide tablet eight wide computer eight wide widescreen eight wide large screen column">
                                  			
										   <h5>Description</h5>

										   <p>{{user.description}}</p>


	
										</div>
                                 		
                                 		<div class="ui twelve wide tablet four wide computer four wide widescreen four wide large screen column">
											   <h5>Origine de</h5>

											   <div class="location-sq">
												   <i class="icon icon-location-pin-2"></i>
													{{user.ville}}
											   </div>
											   <h5 class="mt-5">Social</h5>

											   <ul class="list-default-sq list-style-inline-sq">
												   <li><a href="https://www.facebook.com/{{user.fb}}" target="_blank">
													   <i class="fab fa-facebook fa-2xl"></i></a>
												   </li>
												   <li><a href="https://instagram.com/{{user.insta}}" target="_blank">
												  <i class="fab fa-instagram fa-2xl"></i></a>
												   </li>
											   </ul>

									   </div>
                                  		
                                  	</div>
                                  </div>
                                       
                               </div>
                           </div>
                           
                           
                           <div class="ui twelve wide computer column">
                             
                              <div class="typo-header-sq">
                                  <div class="ui grid">
                                      <div class="row">
                                         <div class="twelve wide mobile six wide tablet eight wide computer eight wide widescreen eight wide large screen column" id="products">
                                               <h3>Covoiturages <sup>{{user.ads | length}}</sup></h3>
                                        </div>
                                        
                                       
                                         
                                          
                                      </div>
                                  </div>
                              </div>
                              
                              <div class="ui grid">
                                  <div class="row">



                                    {% for a in user.ads %}                              
                                    <div class="twelve wide mobile six wide tablet six wide computer six wide widescreen six wide large screen column">
                                       <div class="property-item caption-sq shadow-sq small-sq">
							<div class="property-item-inner">

							   <div class="price-tag-sq">{{a.montant}} DT <span>/ personne</span></div>

                                

								<a class="image-sq" href="{{path('show_ad',{'id':a.id})}}">
									<div class="image-wrapper">
										<span class="image-inner">
											<img src="/uploads/{{a.image}}" alt="" class="">
										</span>
									</div>
								</a>

								<div class="main-details">
								   <div class="title-row">
									   <a href="property_page.html" class="title-sq">{{a.marque}}</a>
                                       {{a.datecov | date ('m/d/Y')}}
                                        {{a.timecov | date ('h:m')}}
								   </div>
            
								   <div class="icons-row">
									   <div class="icons-column">
										   <i class="icon icon-building-9"></i> {{a.phone}}
									   </div>
                                        <div class="icons-column">
									  <i class="icon icon-location-pin-2"></i> De {{a.ville}} vers {{a.destination}}
                                         </div>
									   <div class="icons-column">
                                       {% if a.nbp == a.nbr %}
										   <i class="icon icon-user-circle"></i>{{a.nbp}}/{{a.nbr}} Compléé
                                           {% else %}
                                            <i class="icon icon-user-circle"></i>{{a.nbp}}/{% if a.nbr == null %}0 {% else %}{{a.nbr}}{% endif %}
                                         {% endif %}
									   </div>
                                       
                                       
								   </div>
                                       
                                       
								</div>

                            

                            </div>
						</div>
                                    </div>
                                    {% endfor %}

                                 


                                    
                                  </div>
                              </div>
                           </div>
                   </div>
                   </div>
               </div>
               
               
            </div>
        </div>
        
        
   </div>
    
  
{% endblock %}
